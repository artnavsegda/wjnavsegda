  "title": "wiphy",
  "description": "WiFi Interfaces list",
  "type": "object",
  "patternProperties": {
    ".*": {
      "type": "object",
      "title": "Radio Interface entity",
      "properties": {
        "somevalue1": {
          "type": "string",
          "description": "Some anther radio value"
        },
        "freq": {"$ref": "#/definitions/freq"},
        "htmode": {
          "type": "string",
          "description": "HT radio mode",
          "enum": [ "HT20", "HT40-", "HT40+", "HT40" ]
        },
        "country": {
          "type": "string",
          "description": "Radio regulation region",
          "enum": ["default", "RU"],
        },
      },
      "anyOf": [
        { "properties": {
            "country": {"enum": ["RU"]},
            "freq": {"enum": ["2.4Ghz"]},
            "channel": {"$ref": "#/definitions/2.4Ghz/RU/channels"}
        }},
        { "properties": {
            "country": {"enum": ["RU"]},
            "freq": {"enum": ["5Ghz"]},
            "channel": {"$ref": "#/definitions/5Ghz/RU/channels"}
        }},
        { "properties": {
            "country": {"enum": ["default"]},
            "freq": {"enum": ["2.4Ghz"]},
            "channel": {"$ref": "#/definitions/2.4Ghz/default/channels"}
        }},
        { "properties": {
            "country": {"enum": ["default"]},
            "freq": {"enum": ["5Ghz"]},
            "channel": {"$ref": "#/definitions/5Ghz/default/channels"}
        }},
      ]
